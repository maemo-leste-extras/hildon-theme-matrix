<?xml version="1.0"?>
<theme name="Matrix" author="ThemeMaker"
       desc="" version="1.0" engine-version="1" cache="false" >

<color id="DefaultTextColor"   def="#ffffff" />
<color id="TitleTextColor"   def="#ffffff" />

<color id="black"   def="#000000ff" />
<color id="white"   def="#ffffffff" />

<font id="titlefont" def="Nokia Sans 33px" />
<font id="menufont" def="Nokia Sans bold 12" />

<pixmap id="titleBarTile" filename="../images/wmTitleBar.png" />
<pixmap id="dialogTitleBarTile" filename="../images/wmDialogCenter.png" />


<!-- Main windows title bar. You need to define its height -->
<frame id="main" height="56">
  <layer x="0" y="0" w="800" h="56"
     type="pixmap" pixmap="titleBarTile"/>
  <layer x="0" y="16" w="100%" h="33"
     type="label" color="TitleTextColor" justify="center" font="titlefont" />

</frame>


<frame id="dialog" height="46" >
  <layer x="0" y="0" w="800" h="46"
     type="pixmap" pixmap="dialogTitleBarTile"/>
  <layer x="0" y="10" w="100%" h="33"
     type="label" color="DefaultTextColor" justify="center" font="titlefont" />

</frame>

</theme>
